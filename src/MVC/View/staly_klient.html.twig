{% extends 'MVC/View/Layouts/main.html.twig' %}

{% block sources %}
    <title>Projekt Restauracja</title>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
    <script type="text/javascript" src="{{ asset('js/zegar.js') }}"></script>
    <script>
        window.onload=zegar;
    </script>
    <style>
        .my_form
        {
            min-height: 300px;
        }

        .zeg
        {
            margin-top: 30px;
            margin-bottom: 53px;
            z-index: 1;
            margin-left: 45%;
            width: 10%;
            display: block;
            text-align: center;
            position: relative;
            color: black;
            font-size: 20px;
        }

        .yII
        {
            text-align: center;
            font-size: 20px;
            width: 220px;
            padding: 7px;
            padding-right: 15px;
            padding-left: 15px;
            border-radius: 20px;
            background-color: red;
            margin-top: 20px;
            border-style: none;
            box-shadow: 3px 3px #AA000088;
        }
    </style>
{% endblock %}

{% block main %}
<header>
    <p class="tytul">Witaj {{ nameFirst }} {{ nameLast }}!</p>
</header>

    <form class="my_form c">
        <input id="order" class="yII" type="button" value="Otwórz rachunek"><br>
        <input id="orderOnTime" class="yII" type="button" value="Zamów na godzinę"><br>
        <input id="reservations" class="yII" type="button" value="Rezerwacje"><br>
        <input id="signOut" class="yII" type="button" value="Wyloguj">
    </form>
    <div id="zeg" class="zeg c"></div>

    <script type="text/javascript" src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/client.js') }}"></script>
{% endblock %}

